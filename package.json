{
  "name": "image-processing-api",
  "version": "1.0.0",
  "description": "udacity",
  "main": "main.js",
  "scripts": {
    "start": "nodemon",
    "clean": "tsc --build --clean",
    "prettier": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "lint": "npx eslint .",
    "build": "npx tsc",
    "jasmine": "jasmine",
    "test": "npm run build && npm run jasmine"
  },
  "author": "nthlong",
  "license": "ISC",
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
