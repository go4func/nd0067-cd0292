      "src/tests/*"
    ],
    "exec": "ts-node ./src/main.ts"
  },
  "dependencies": {
    "express": "^4.18.3",
    "jasmine": "^5.1.0",
    "jasmine-spec-reporter": "^7.0.0",
    "sharp": "^0.32.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jasmine": "^5.1.4",
    "@types/node": "^20.11.24",
    "@types/sharp": "^0.32.0",
    "eslint": "^8.57.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^7.1.0"
  }
